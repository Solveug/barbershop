<%# <%= @arr %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Телефон</th>
      <th>Дата записи</th>
      <th>Барбер</th>
      <th>Цвет краски</th>
    </tr>
  </thead>

  <tbody>
      <% @results.each do |row| %>
        <tr>
          <td><%= row['username'] %></td>
          <td><%= row['phone'] %></td>
          <td><%= row['datestamp'] %></td>
          <td><%= row['barber'] %></td>
          <style type="text/css">#td_<%=row['id']%>{color:<%= row['color'] %>}</style>
          <td id =<%="td_#{row['id']}"%> > <%= row['color'] %> </td>
        </tr>
      <% end %>
    </tbody>

</table>
